@using Dapper.Entity
@model User
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<div class="col-md-10 offset-1">
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="input-group">
                @Html.TextBoxFor(model => model.Name, new { @class = "input-group" })
                @Html.TextBoxFor(model => model.Surname, new { @class = "input-group" })
            </div>
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    }

</div>