@using Dapper.Entity
@model List<User>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table class="table">
    <a href="~/Home/Create" class="btn btn-default">Create</a>

    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Edit</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {

        <tbody>
            <tr>
                <td>@item.id</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>
                    <a href="~/Home/Delete/@item.id" class="btn btn-danger btn-xs" title="Delete" /><span class="glyphicon glyphicon-remove-sign"></span>
                    <a href="~/Home/Update/@item.id" class="btn btn-info btn-xs" title="Update"/><span class="glyphicon glyphicon-arrow-up"></span>
                </td>

            </tr>
        </tbody>

    }
</table>

